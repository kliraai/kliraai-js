{
  "name": "@kliraai/sdk",
  "version": "0.1.0",
  "description": "Klira AI JavaScript/TypeScript SDK for LLM observability, tracing, and guardrails",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vercel-ai": {
      "import": "./dist/adapters/vercel-ai/index.mjs",
      "require": "./dist/adapters/vercel-ai/index.js",
      "types": "./dist/adapters/vercel-ai/index.d.ts"
    },
    "./langchain": {
      "import": "./dist/adapters/langchain/index.mjs",
      "require": "./dist/adapters/langchain/index.js",
      "types": "./dist/adapters/langchain/index.d.ts"
    },
    "./openai": {
      "import": "./dist/adapters/openai/index.mjs",
      "require": "./dist/adapters/openai/index.js",
      "types": "./dist/adapters/openai/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "observability",
    "tracing",
    "guardrails",
    "compliance",
    "opentelemetry",
    "vercel-ai",
    "langchain",
    "typescript"
  ],
  "author": "Klira AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kliraai/kliraai-js.git"
  },
  "bugs": {
    "url": "https://github.com/kliraai/kliraai-js/issues"
  },
  "homepage": "https://github.com/kliraai/kliraai-js#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.53.0",
    "@opentelemetry/instrumentation": "^0.53.0",
    "@opentelemetry/resources": "^1.26.0",
    "@opentelemetry/semantic-conventions": "^1.26.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "ai": ">=3.0.0",
    "@ai-sdk/openai": ">=0.0.1",
    "@ai-sdk/anthropic": ">=0.0.1",
    "@ai-sdk/google": ">=0.0.1",
    "@langchain/core": ">=0.2.0",
    "@langchain/openai": ">=0.2.0",
    "openai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    },
    "@ai-sdk/openai": {
      "optional": true
    },
    "@ai-sdk/anthropic": {
      "optional": true
    },
    "@ai-sdk/google": {
      "optional": true
    },
    "@langchain/core": {
      "optional": true
    },
    "@langchain/openai": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.2.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}