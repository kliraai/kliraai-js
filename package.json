{
  "name": "klira",
  "version": "0.1.0",
  "type": "module",
  "description": "Klira AI Compliance for GenAI - JavaScript/TypeScript SDK for LLM observability, tracing, and guardrails",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./vercel-ai": {
      "types": "./dist/adapters/vercel-ai/index.d.ts",
      "import": "./dist/adapters/vercel-ai/index.mjs",
      "require": "./dist/adapters/vercel-ai/index.js"
    },
    "./langchain": {
      "types": "./dist/adapters/langchain/index.d.ts",
      "import": "./dist/adapters/langchain/index.mjs",
      "require": "./dist/adapters/langchain/index.js"
    },
    "./openai": {
      "types": "./dist/adapters/openai/index.d.ts",
      "import": "./dist/adapters/openai/index.mjs",
      "require": "./dist/adapters/openai/index.js"
    },
    "./custom": {
      "types": "./dist/adapters/custom/index.d.ts",
      "import": "./dist/adapters/custom/index.mjs",
      "require": "./dist/adapters/custom/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "copy:policies": "mkdir -p dist/guardrails && cp src/guardrails/*.yaml dist/guardrails/",
    "build": "npm run type-check && tsup && npm run copy:policies",
    "build:fast": "tsup && npm run copy:policies",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "npm run build:fast",
    "example:openai": "tsx examples/openai-example.ts",
    "example:langchain": "tsx examples/langchain-example.ts",
    "example:custom": "tsx examples/custom-agent-example.ts",
    "example:real-providers": "tsx examples/real-providers-demo.ts",
    "example:performance": "tsx examples/performance-comparison.ts",
    "example:simple-perf": "tsx examples/simple-performance-test.ts",
    "build:analyze": "NODE_ENV=production npm run build && npm run size",
    "build:prod": "NODE_ENV=production npm run build",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "bundlesize": "bundlesize",
    "prepublishOnly": "npm run build:prod && npm run test && npm run size"
  },
  "keywords": [
    "ai",
    "llm",
    "observability",
    "tracing",
    "guardrails",
    "compliance",
    "opentelemetry",
    "vercel-ai",
    "langchain",
    "typescript"
  ],
  "author": "Klira AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kliraai/kliraai-js.git"
  },
  "bugs": {
    "url": "https://github.com/kliraai/kliraai-js/issues"
  },
  "homepage": "https://github.com/kliraai/kliraai-js#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.207.0",
    "@opentelemetry/instrumentation": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.29.0",
    "fast-levenshtein": "^3.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@ai-sdk/anthropic": ">=0.0.1",
    "@ai-sdk/google": ">=0.0.1",
    "@ai-sdk/openai": "^2.0.19",
    "@langchain/core": "^0.3.72",
    "@langchain/openai": "^0.6.9",
    "ai": "^5.0.22",
    "openai": "^5.13.1"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    },
    "@ai-sdk/openai": {
      "optional": true
    },
    "@ai-sdk/anthropic": {
      "optional": true
    },
    "@ai-sdk/google": {
      "optional": true
    },
    "@langchain/core": {
      "optional": true
    },
    "@langchain/openai": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "bundlesize": "^0.18.2",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "size-limit": "^11.2.0",
    "tsup": "^8.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "size-limit": [
    {
      "name": "Core SDK (ESM)",
      "path": "dist/index.mjs",
      "limit": "150 KB",
      "import": "{ KliraAI }"
    },
    {
      "name": "OpenAI Adapter (ESM)",
      "path": "dist/adapters/openai/index.mjs",
      "limit": "75 KB",
      "import": "{ createKliraOpenAI }"
    },
    {
      "name": "Custom Adapter (ESM)",
      "path": "dist/adapters/custom/index.mjs",
      "limit": "60 KB",
      "import": "{ createKliraAgent }"
    },
    {
      "name": "LangChain Adapter (ESM)",
      "path": "dist/adapters/langchain/index.mjs",
      "limit": "50 KB",
      "import": "{ KliraLangChainCallbacks }"
    }
  ],
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "150 KB"
    },
    {
      "path": "./dist/adapters/**/*.js",
      "maxSize": "75 KB"
    }
  ]
}
